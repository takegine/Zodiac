<root>
    <styles>
        <include src="s2r://panorama/styles/custom_game/elementshop.css" />
    </styles>
    <scripts>
        <include src="s2r://panorama/scripts/custom_game/elementshop.js" />
    </scripts>

    <snippets>

        <snippet name="BollSnip">
            <Panel style='flow-children:right;'>
                <Button class="btntop">
                    <Label hittest="false" text="" />
                </Button>
                <Label class="numb" text="" />
            </Panel>
        </snippet>

    </snippets>

    <Panel hittest="false" class="ElementShopPanel">

        <Panel id="Bolls" hittest="false" />

        <Button class="btnleft" id="ElementShop" onactivate='Yes()'>
            <Label id="readytext" class="ElementShopText" text="#UIButton1" />
        </Button>

        <Panel hittest="false" id="ShopInfo" class="ShopInfoAnim">
            <!--弹出合成列表-->
            <Image hittest="false" src="file://panorama/images/custom_game/all/fondtop.png"
                style="height:100%;width:100%; " />
            <!--背景图片-->

            <Panel id="textforhero">
                <Label text="#textforhero1" class="textforh" style="margin-right:240px;color:#18D337;" />
                <Label text="#textforhero2" class="textforh" style="margin-right:240px;color:#344C99;" />
                <Label text="#textforhero3" class="textforh" style="margin-right:80px;" />
            </Panel>

            <Button id="ToggleX3mode" onactivate='ToggleX3mode()'
                style="height:30px;width:30px;margin-top:510px;margin-left:860px;"
                onmouseover='DOTAShowTextTooltip(x3 Mode)' onmouseout='DOTAHideTextTooltip()'>
                <Label text="x3" style="font-size:25px;color:#58ACFA;" />
            </Button>
        </Panel>
    </Panel>
</root>